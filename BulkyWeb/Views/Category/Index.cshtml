@model List<Category>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary"> Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Home" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Category </a>
        </div>
    </div>

<table class="table table-bordered active  table-hover">
    <tr>
        <th>Name</th>
        <th>Display Order</th>
    </tr>
    <tbody>
        @foreach (var obj in Model.OrderBy(n=>n.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
            </tr>
        }
    </tbody>

</table> 

</div>